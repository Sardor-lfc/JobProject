<%- include("partials/header")-%>



	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card border-0 shadow-sm">
					<div class="card-body">

						<h2 class="card-title text-center mb-5">Craete free a account</h2>
						<form action="/register" method="post">
							<div class="form-group">
								<label for="name">Full Name</label>
								<input class="form-control border-0 bg-light" type="text" name="name" id="name" />
							</div>
							<div class="form-group">
								<label for="username">Username</label>
								<input class="form-control border-0 bg-light" type="text" name="username"
									id="username" />
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								<input class="form-control border-0 bg-light" type="text" name="password"
									id="password" />

							</div>

							<div class="input-group mt-3">
								<select class="form-select" id="inputGroupSelect01" name="gender">
									<option value="Male">Male</option>
									<option value="Female">Female</option>

								</select>
							</div>
							<div class="row">
								<div class="col">
									<div class="form-group">
										<label for="profilePicture">Upload Profile Picture</label>
										<input type="file" class="form-control" id="profilePicture"
											name="profilePicture" accept="image/*">
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="Email">Email</label>
								<input class="form-control border-0 bg-light" type="text" name="email" id="email" />
							</div>

							<button class="btn btn-primary btn-block mt-3" type="submit" name="button">
								Publish
							</button>
						</form>
					</div>
				</div>

			</div>
		</div>
	</div>

	<%- include("partials/footer")-%>