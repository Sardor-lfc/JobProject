<%- include("partials/header")-%>


	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card border-0 shadow-sm">
					<div class="card-body">

						<h2 class="card-title text-center mb-5">Login</h2>
						<form action="/login" method="post">
							<div class="form-group">
								<label for="name">Name</label>
								<input class="form-control border-0 bg-light" type="text" name="name" id="name" />
							</div>
							<div class="form-group">
								<label for="username">Username</label>
								<input class="form-control border-0 bg-light" type="text" name="username"
									id="username" />
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								<input class="form-control border-0 bg-light" type="text" name="password"
									id="password" />

							</div>



							<button class="btn btn-primary btn-block mt-3" type="submit" name="button">
								Submit
							</button>
						</form>
					</div>
				</div>

			</div>
		</div>
	</div>